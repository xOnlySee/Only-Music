<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tituloCancion_fragmentoCanciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="Titulo canción"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/informacionCancion_fragmentoCanciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tituloCancion_fragmentoCanciones"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="Nombre artista ● Nombre Album ● Duración de canción"/>

</RelativeLayout>
