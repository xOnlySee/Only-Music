<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color de la barra del SeekBar -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#ECECEC"
                android:centerColor="#CFCFCF"
                android:centerY="0.75"
                android:endColor="#E5E5E5"
                android:angle="270" />
        </shape>
    </item>

    <!-- Color de la parte que se ha recorrido en el SeekBar -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#89B4F8"
                    android:centerColor="#89B4F8"
                    android:centerY="0.75"
                    android:endColor="#89B4F8"
                    android:angle="270" />
            </shape>
        </clip>
    </item>
</layer-list>